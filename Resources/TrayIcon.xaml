<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:enums="clr-namespace:ARA.Enums"
                    xmlns:vm="clr-namespace:ARA.ViewModels"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    mc:Ignorable="d">

	<tb:TaskbarIcon x:Key="TrayIcon"
		d:DataContext="{d:DesignInstance Type=vm:TrayIconModel, IsDesignTimeCreatable=False}"
		IconSource="/Assets/app.ico"
		DoubleClickCommand="{Binding ShowWindowCommand}"
		ToolTipText="ARA">

		<tb:TaskbarIcon.ContextMenu>
			<ContextMenu>
				<MenuItem Header="Loadout" Command="{Binding NavigateToPageCommand}" CommandParameter="{x:Static enums:AraPage.Loadout}"/>
				<MenuItem Header="Settings" Command="{Binding NavigateToPageCommand}" CommandParameter="{x:Static enums:AraPage.Settings}"/>
				<MenuItem Header="About" Command="{Binding NavigateToPageCommand}" CommandParameter="{x:Static enums:AraPage.About}"/>
				<Separator />
				<MenuItem Header="Exit" Command="{Binding ExitCommand}"/>
			</ContextMenu>
		</tb:TaskbarIcon.ContextMenu>

	</tb:TaskbarIcon>

</ResourceDictionary>