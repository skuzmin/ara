<UserControl x:Class="ARA.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<StackPanel Margin="4">
		<TextBlock Text="{Binding Title}" FontSize="24" Margin="0,0,0,4"/>
		<Button Content="Change Title"
                Command="{Binding ChangeTitleCommand}"
                Margin="4" Padding="4,4"/>
	</StackPanel>
</UserControl>
