<UserControl x:Class="ARA.Views.LoadoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:pages="clr-namespace:ARA.ViewModels.Pages" 
			 xmlns:controls="clr-namespace:ARA.Controls"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d"
			 d:DataContext="{d:DesignInstance Type=pages:LoadoutViewModel}">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="40" />
			<RowDefinition Height="16" />
			<RowDefinition Height="40" />
			<RowDefinition Height="16" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal" Grid.Row="0">
			<TextBlock Style="{StaticResource LoadoutViewTitle}" Text="Loadout Checker" />
			<controls:AraButton Style="{StaticResource LoadoutConfigButton}">
				<Image Style="{StaticResource LoadoutConfigImage}" Source="/Assets/Icons/config.png" />
			</controls:AraButton>
		</StackPanel>

		<Grid Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="12"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<controls:AraComboBox
				ItemsListCornerRadius="12"
				ItemsListMaxHeight="120"
				ListItemHeight="40"
				ListItemBackground="Gray"
				ListItemHoverBackground="LightBlue"
				ListItemSelectedBackground="LightGreen"
				ListItemMargin="12,0"
				ListItemFontSize="16"
				ListItemFontFamily="{DynamicResource Font-Primary}"
				ListItemForeground="Black"
				ListItemFontWeight="Medium"
				SelectedTextFontSize="20"
				SelectedTextForeground="White"
				SelectedTextMargin="12,4"
				SelectedTextFontFamily="{DynamicResource Font-Primary}"
				ToggleButtonBorderThickness="1,1,1,1"
				ToggleButtonCornerRadius="4"
				ToggleButtonBorderBrush="Black"
				ToggleButtonArrowHeight="16"
				ToggleButtonArrowWidth="16"
				ToggleButtonArrowMargin="0,0,8,0"
				ToggleButtonArrowBrush="Black"
				ToggleButtonHoverArrowBrush="Gray"
				ToggleButtonHoverBorderBrush="Gray"
				ToggleButtonOpenArrowBrush="White"
				ToggleButtonOpenBorderBrush="White"
				ItemsSource="{Binding LoadoutOptions}" 
				SelectedItem="{Binding SelectedLoadout, Mode=TwoWay}"/>
			<controls:AraButton  Grid.Column="2" Style="{StaticResource LoadoutConfigCheckButton}">
				<StackPanel Orientation="Horizontal">
					<Image Style="{StaticResource LoadoutCheckImage}" Source="/Assets/Icons/check-mark.png" />
					<TextBlock Text="Check" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" />
				</StackPanel>
			</controls:AraButton>
		</Grid>

		<StackPanel Orientation="Horizontal" Grid.Row="4">
			<TextBlock Text="Preview controls" />
		</StackPanel>
	</Grid>
</UserControl>
