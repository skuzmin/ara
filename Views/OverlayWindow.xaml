<Window x:Class="ARA.Views.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARA.Views"
        mc:Ignorable="d"
        Style="{StaticResource OverlayWindow}">
	<Canvas x:Name="OverlayCanvas">
		<Border x:Name="SelectionBorder" Style="{StaticResource SelectionZone}"/>
		<Border x:Name="LabelAnchor">
			<StackPanel x:Name="LabelPanel" 
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
				<TextBlock Text="Enter to save" Style="{StaticResource OverlayLabelSave}"/>
				<TextBlock Text="Esc to cancel" Style="{StaticResource OverlayLabelCancel}"/>
			</StackPanel>
		</Border>
	</Canvas>
</Window>
