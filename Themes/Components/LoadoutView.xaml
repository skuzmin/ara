<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:controls="clr-namespace:ARA.Controls"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style x:Key="LoadoutViewTitle" TargetType="TextBlock">
		<Setter Property="Foreground" Value="{StaticResource TextColorPrimary}" />
		<Setter Property="FontSize" Value="24" />
		<Setter Property="FontFamily" Value="{StaticResource Font-Primary}" />
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="Margin">
			<Setter.Value>
				<Thickness 
					Left="{StaticResource Spacing-0}"
					Right="{StaticResource Spacing-3}"
					Top="{StaticResource Spacing-0}"
					Bottom="{StaticResource Spacing-0}"/>
			</Setter.Value>
		</Setter>
	</Style>

	<Style x:Key="LoadoutConfigButton" TargetType="controls:AraButton">
		<Setter Property="Height" Value="32" />
		<Setter Property="Width" Value="32" />
		<Setter Property="CornerRadius" Value="{StaticResource Radius-2}" />
		<Setter Property="HoverBackground" Value="{StaticResource LoadoutConfigButtonBackgroundColor}" />
		<Setter Property="Padding">
			<Setter.Value>
				<Thickness 
					Left="{StaticResource Spacing-1}"
					Right="{StaticResource Spacing-1}"
					Top="{StaticResource Spacing-1}"
					Bottom="{StaticResource Spacing-1}"/>
			</Setter.Value>
		</Setter>
	</Style>

	<Style x:Key="LoadoutConfigImage" TargetType="Image">
		<Setter Property="SnapsToDevicePixels" Value="True" />
	</Style>

	<Style x:Key="LoadoutCheckImage" TargetType="Image">
		<Setter Property="Height" Value="20" />
		<Setter Property="Width" Value="20" />
		<Setter Property="SnapsToDevicePixels" Value="True" />
		<Setter Property="Margin" Value="0,0,4,0" />
	</Style>

	<Style x:Key="LoadoutConfigComboBox" TargetType="ComboBox">
	</Style>

	<Style x:Key="LoadoutConfigCheckButton" TargetType="controls:AraButton">
		<Setter Property="Foreground" Value="{StaticResource TextColorSecondary}" />
		<Setter Property="HoverForeground" Value="{StaticResource TextColorSecondary}" />
		<Setter Property="Background" Value="{StaticResource LoadoutCheckButtonBackgroundColor}" />
		<Setter Property="HoverBackground" Value="{StaticResource LoadoutCheckButtonHoverBackgroundColor}" />
		<Setter Property="CornerRadius" Value="{StaticResource Radius-1}" />
		<Setter Property="FontFamily" Value="{StaticResource Font-Primary}" />
		<Setter Property="FontSize" Value="24" />
		<Setter Property="FontWeight" Value="Medium" />
		<Setter Property="Padding">
			<Setter.Value>
				<Thickness 
					Left="{StaticResource Spacing-2}"
					Right="{StaticResource Spacing-2}"
					Top="{StaticResource Spacing-1}"
					Bottom="{StaticResource Spacing-1}"/>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>