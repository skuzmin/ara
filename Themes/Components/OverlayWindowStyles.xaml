<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:controls="clr-namespace:ARA.Controls.CustomControls">

	<Style x:Key="OverlayWindow" TargetType="Window">
		<Setter Property="Background" Value="{StaticResource OverlayWindow__Background}" />
		<Setter Property="WindowStyle" Value="None" />
		<Setter Property="AllowsTransparency" Value="True" />
		<Setter Property="Topmost" Value="True" />
		<Setter Property="WindowState" Value="Maximized" />
	</Style>

	<Style x:Key="SelectionZone" TargetType="Border">
		<Setter Property="BorderBrush" Value="{StaticResource OverlayWindow__ZoneBorderBrush}" />
		<Setter Property="BorderThickness" Value="2" />
		<Setter Property="Background" Value="{StaticResource OverlayWindow__ZoneBackground}" />
	</Style>

	<Style x:Key="OverlayLabel" TargetType="TextBlock">
		<Setter Property="FontSize" Value="20" />
		<Setter Property="FontFamily" Value="{StaticResource Font-Secondary}" />
		<Setter Property="FontWeight" Value="Bold" />
		<Setter Property="Margin">
			<Setter.Value>
				<Thickness 
					Left="{StaticResource Spacing-3}"
					Top="{StaticResource Spacing-0}"
					Right="{StaticResource Spacing-3}"
					Bottom="{StaticResource Spacing-0}"/>
			</Setter.Value>
		</Setter>
	</Style>

	<Style x:Key="OverlayLabelSave" BasedOn="{StaticResource OverlayLabel}" TargetType="TextBlock">
		<Setter Property="Foreground" Value="{StaticResource OverlayWindow__LabelSave}" />
	</Style>

	<Style x:Key="OverlayLabelCancel" BasedOn="{StaticResource OverlayLabel}" TargetType="TextBlock">
		<Setter Property="Foreground" Value="{StaticResource OverlayWindow__LabelCancel}" />
	</Style>
</ResourceDictionary>
