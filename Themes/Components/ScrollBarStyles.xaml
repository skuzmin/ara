<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:controls="clr-namespace:ARA.Controls">

	<Style TargetType="{x:Type Thumb}">
		<Setter Property="OverridesDefaultStyle" Value="True" />
		<Setter Property="IsTabStop" Value="False" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Thumb}">
					<Border x:Name="ThumbBody"
						SnapsToDevicePixels="True"
						Height="{TemplateBinding Height}"
						Width="{TemplateBinding Width}"
						Opacity="0.5"
						Background="{StaticResource ScrollBar__ThumbBrush}" 
						CornerRadius="{StaticResource Radius-1}" />
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Trigger.EnterActions>
								<BeginStoryboard>
									<Storyboard>
										<DoubleAnimation
											Storyboard.TargetName="ThumbBody"
											Storyboard.TargetProperty="Opacity"
											To="1"
											Duration="0:0:0.15" />
									</Storyboard>
								</BeginStoryboard>
							</Trigger.EnterActions>

							<Trigger.ExitActions>
								<BeginStoryboard>
									<Storyboard>
										<DoubleAnimation
											Storyboard.TargetName="ThumbBody"
											Storyboard.TargetProperty="Opacity"
											To="0.5"
											Duration="0:0:0.15" />
									</Storyboard>
								</BeginStoryboard>
							</Trigger.ExitActions>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style TargetType="{x:Type ScrollBar}">
		<Setter Property="Width" Value="12"/>
		<Setter Property="Margin" Value="-12 0 0 0" />
		<Setter Property="MinWidth" Value="{Binding Width, RelativeSource={RelativeSource Self}}"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ScrollBar}">
					<Grid SnapsToDevicePixels="True" Background="Transparent">
						<Track x:Name="PART_Track" 
						IsDirectionReversed="True"
						IsEnabled="{TemplateBinding IsMouseOver}"
						HorizontalAlignment="Center"
						Width="8">
							<Track.DecreaseRepeatButton>
								<RepeatButton Style="{x:Null}" Opacity="0" Command="{x:Static ScrollBar.PageUpCommand}"/>
							</Track.DecreaseRepeatButton>
							<Track.Thumb>
								<Thumb />
							</Track.Thumb>
							<Track.IncreaseRepeatButton>
								<RepeatButton Style="{x:Null}" Opacity="0" Command="{x:Static ScrollBar.PageDownCommand}"/>
							</Track.IncreaseRepeatButton>
						</Track>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
