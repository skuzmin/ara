<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:local="clr-namespace:ARA">
	<Style x:Key="Dialog_Window" TargetType="local:AraWindow">
		<Setter Property="SizeToContent" Value="WidthAndHeight" />
		<Setter Property="MinimizeButtonDisplay" Value="Collapsed" />
		<Setter Property="BorderThickness" Value="2" />
		<Setter Property="TitleBarBackground" Value="{StaticResource TitleBar__ConfirmationBackgroundColor}" />
		<Setter Property="Height" Value="{StaticResource ConfirmationDialogHeight}" />
		<Setter Property="Width" Value="{StaticResource ConfirmationDialogWidth}" />
	</Style>

	<Style x:Key="Dialog__MainContainer" TargetType="Border">
		<Setter Property="Padding" Value="16" />
		<Setter Property="Background" Value="{StaticResource Dialog__Background}" />
	</Style>

	<Style x:Key="Dialog__Message" TargetType="TextBlock">
		<Setter Property="Foreground" Value="{StaticResource TextColorPrimary}" />
		<Setter Property="FontSize" Value="16" />
		<Setter Property="FontFamily" Value="{StaticResource Font-Secondary}" />
		<Setter Property="FontWeight" Value="Medium" />
		<Setter Property="TextWrapping" Value="Wrap" />
		<Setter Property="TextAlignment" Value="Center" />
		<Setter Property="Margin">
			<Setter.Value>
				<Thickness 
					Left="{StaticResource Spacing-0}"
					Top="{StaticResource Spacing-0}"  
					Right="{StaticResource Spacing-0}"
					Bottom="{StaticResource Spacing-2}" />
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>