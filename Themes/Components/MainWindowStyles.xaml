<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:ARA.Controls.CustomControls">
	<Style x:Key="MainWindowNavigation" TargetType="Border">
		<Setter Property="Background">
			<Setter.Value>
				<SolidColorBrush Color="{Binding Source={StaticResource MainWindow__NavigationBackgroundColor}, Path=Color}" Opacity="0.9"/>
			</Setter.Value>
		</Setter>
		<Setter Property="Padding">
			<Setter.Value>
				<Thickness 
					Left="{StaticResource Spacing-4}"
					Right="{StaticResource Spacing-4}"
					Top="{StaticResource Spacing-3}"
					Bottom="{StaticResource Spacing-3}"/>
			</Setter.Value>
		</Setter>
	</Style>

	<Style x:Key="SelectedMenuPill" TargetType="Border">
		<Setter Property="Height" Value="40" />
		<Setter Property="BorderBrush" Value="{StaticResource TextColorPrimary}" />
		<Setter Property="HorizontalAlignment" Value="Left" />
		<Setter Property="BorderThickness" Value="2" />
		<Setter Property="CornerRadius" Value="{StaticResource Radius-5}" />
	</Style>

	<Style x:Key="MainWindowContaier" TargetType="Border">
		<Setter Property="Background">
			<Setter.Value>
				<SolidColorBrush Color="{Binding Source={StaticResource MainWindow__ContainerBackgroundColor}, Path=Color}" Opacity="0.9"/>
			</Setter.Value>
		</Setter>
		<Setter Property="Padding">
			<Setter.Value>
				<Thickness 
				Left="{StaticResource Spacing-4}"
				Right="{StaticResource Spacing-4}"
				Top="{StaticResource Spacing-4}"
				Bottom="{StaticResource Spacing-4}"/>
			</Setter.Value>
		</Setter>
	</Style>

	<Style x:Key="MainWindowNavigationButton" TargetType="controls:AraButton">
		<Setter Property="Height" Value="40" />
		<Setter Property="FontSize" Value="16" />
		<Setter Property="FontWeight" Value="Medium" />
		<Setter Property="BorderThickness" Value="2" />
		<Setter Property="HorizontalContentAlignment" Value="Center" />
		<Setter Property="VerticalContentAlignment" Value="Center" />
		<Setter Property="FontFamily" Value="{StaticResource Font-Primary}" />
		<Setter Property="SelectedForeground" Value="{StaticResource TextColorPrimary}" />
		<Setter Property="Padding">
			<Setter.Value>
				<Thickness 
					Left="{StaticResource Spacing-4}"
					Right="{StaticResource Spacing-4}"
					Top="{StaticResource Spacing-0}"
					Bottom="{StaticResource Spacing-0}"/>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>