<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:local="clr-namespace:ARA"
					xmlns:ext="clr-namespace:ARA.MarkupExtensions"
					xmlns:controls="clr-namespace:ARA.Controls">

	<!--ARA Window-->
	<Style TargetType="{x:Type local:AraWindow}">
		<Setter Property="Height" Value="480"/>
		<Setter Property="Width" Value="640"/>
		<Setter Property="ResizeMode" Value="NoResize"/>
		<Setter Property="Topmost" Value="True"/>
		<Setter Property="WindowStyle" Value="None"/>
		<Setter Property="AllowsTransparency" Value="True"/>
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type local:AraWindow}">
					<Grid Background="Transparent">
						<Grid.Clip>
							<RectangleGeometry RadiusX="8" RadiusY="8" Rect="0,0,640,480" />
						</Grid.Clip>
						<Grid.RowDefinitions>
							<RowDefinition Height="32"/>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>
						<controls:TitleBarUserControl Grid.Row="0"/>
						<ContentPresenter Grid.Row="1"/>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!--ARA Button-->
	<Style TargetType="{x:Type controls:AraButton}">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderBrush" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Foreground" Value="White"/>

		<Setter Property="HoverBackground" Value="Transparent"/>
		<Setter Property="HoverBorderBrush" Value="Transparent"/>
		<Setter Property="HoverForeground" Value="White"/>

		<Setter Property="SelectedBackground" Value="Transparent"/>
		<Setter Property="SelectedBorderBrush" Value="Transparent"/>
		<Setter Property="SelectedForeground" Value="White"/>
		<Setter Property="CornerRadius" Value="0"/>

		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type controls:AraButton}">
					<Border x:Name="Border"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
                        Background="{TemplateBinding Background}"
						BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
						Padding="{TemplateBinding Padding}"
						Margin="{TemplateBinding Margin}"
						CornerRadius="{TemplateBinding CornerRadius}">
						<ContentPresenter
							Content="{TemplateBinding Content}"
							HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
							VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
							ContentTemplate="{TemplateBinding ContentTemplate}" />
					</Border>

					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter TargetName="Border"
                                Property="Background"
                                Value="{Binding HoverBackground,
                                        RelativeSource={RelativeSource TemplatedParent}}"/>
							<Setter TargetName="Border"
                                Property="BorderBrush"
                                Value="{Binding HoverBorderBrush,
                                        RelativeSource={RelativeSource TemplatedParent}}"/>
							<Setter Property="Foreground" Value="{Binding HoverForeground, RelativeSource={RelativeSource self}}"/>
						</Trigger>

						<Trigger Property="controls:AraButton.IsSelected" Value="True">
							<Setter TargetName="Border"
                                Property="Background"
                                Value="{Binding SelectedBackground,
                                        RelativeSource={RelativeSource TemplatedParent}}"/>
							<Setter TargetName="Border"
                                Property="BorderBrush"
                                Value="{Binding SelectedBorderBrush,
                                        RelativeSource={RelativeSource TemplatedParent}}"/>
							<Setter Property="Foreground" Value="{Binding SelectedForeground,RelativeSource={RelativeSource self}}"/>
						</Trigger>

						<Trigger Property="IsEnabled" Value="False">
							<Setter TargetName="Border"
                                Property="Opacity"
                                Value="0.5"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!--ARA ComboBox-->
	<Style TargetType="{x:Type controls:AraComboBox}">
		<Style.Resources>
			<!-- ComboBoxToggleButton -->
			<ControlTemplate x:Key="AraComboBoxToggleButton" TargetType="{x:Type ToggleButton}">
				<Grid>
					<Border x:Name="Border" 
						Background="{Binding ToggleButtonBackground, RelativeSource={ext:AraComboBoxSourceExtension}}" 
						BorderThickness="{Binding ToggleButtonBorderThickness, RelativeSource={ext:AraComboBoxSourceExtension}}" 
						CornerRadius="{Binding ToggleButtonCornerRadius, RelativeSource={ext:AraComboBoxSourceExtension}}"  
						BorderBrush="{Binding ToggleButtonBorderBrush, RelativeSource={ext:AraComboBoxSourceExtension}}" ></Border>
					<Path x:Name="Arrow"
						 HorizontalAlignment="Right" 
						 VerticalAlignment="Center"
						 Height="{Binding ToggleButtonArrowHeight, RelativeSource={ext:AraComboBoxSourceExtension}}" 
						 Width="{Binding ToggleButtonArrowWidth, RelativeSource={ext:AraComboBoxSourceExtension}}" 
						 Margin="{Binding ToggleButtonArrowMargin, RelativeSource={ext:AraComboBoxSourceExtension}}" 
						 Stretch="Uniform"
						 RenderTransformOrigin="0.5,0.5"
						 Data="M0,0 L0,2 L4,6 L8,2 L8,0 L4,4 z"
						 Fill="{Binding ToggleButtonArrowBrush, RelativeSource={ext:AraComboBoxSourceExtension}}" >
						<Path.RenderTransform>
							<RotateTransform x:Name="ArrowRotation" Angle="0"/>
						</Path.RenderTransform>
					</Path>
				</Grid>
				<ControlTemplate.Triggers>
					<Trigger Property="IsMouseOver" Value="True">
						<Setter 
							TargetName="Border" 
							Property="BorderBrush" 
							Value="{Binding ToggleButtonHoverBorderBrush, RelativeSource={ext:AraComboBoxSourceExtension}}"  />
						<Setter 
							TargetName="Arrow" 
							Property="Fill" 
							Value="{Binding ToggleButtonHoverArrowBrush, RelativeSource={ext:AraComboBoxSourceExtension}}"  />
						<Setter 
							TargetName="Border" 
							Property="Background" 
							Value="{Binding ToggleButtonHoverBackground, RelativeSource={ext:AraComboBoxSourceExtension}}"  />
					</Trigger>
					<Trigger Property="IsChecked" Value="True">
						<Setter 
							TargetName="Border"
							Property="BorderBrush"
							Value="{Binding ToggleButtonOpenBorderBrush, RelativeSource={ext:AraComboBoxSourceExtension}}"  />
						<Setter 
							TargetName="Arrow" 
							Property="Fill" 
							Value="{Binding ToggleButtonOpenArrowBrush, RelativeSource={ext:AraComboBoxSourceExtension}}"  />
						<Setter 
							TargetName="Border" 
							Property="Background" 
							Value="{Binding ToggleButtonOpenBackground, RelativeSource={ext:AraComboBoxSourceExtension}}"  />
						<Trigger.EnterActions>
							<BeginStoryboard>
								<Storyboard>
									<DoubleAnimation
									Storyboard.TargetName="ArrowRotation"
									Storyboard.TargetProperty="Angle"
									To="180"
									Duration="0:0:0.15" />
								</Storyboard>
							</BeginStoryboard>
						</Trigger.EnterActions>

						<Trigger.ExitActions>
							<BeginStoryboard>
								<Storyboard>
									<DoubleAnimation
									Storyboard.TargetName="ArrowRotation"
									Storyboard.TargetProperty="Angle"
									To="0"
									Duration="0:0:0.15" />
								</Storyboard>
							</BeginStoryboard>
						</Trigger.ExitActions>
					</Trigger>
				</ControlTemplate.Triggers>
			</ControlTemplate>
			<!-- ComboBoxItem -->
			<Style TargetType="{x:Type ComboBoxItem}">
				<Setter Property="OverridesDefaultStyle" Value="True"/>
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type ComboBoxItem}">
							<Border x:Name="Border" 
								Height="{Binding ListItemHeight, RelativeSource={ext:AraComboBoxSourceExtension}}"
								Background="{Binding ListItemBackground, RelativeSource={ext:AraComboBoxSourceExtension}}">
								<ContentPresenter 
									Margin="{Binding ListItemMargin, RelativeSource={ext:AraComboBoxSourceExtension}}" 
									TextElement.FontSize="{Binding ListItemFontSize, RelativeSource={ext:AraComboBoxSourceExtension}}"
									TextElement.FontFamily="{Binding ListItemFontFamily, RelativeSource={ext:AraComboBoxSourceExtension}}"
									TextElement.Foreground="{Binding ListItemForeground, RelativeSource={ext:AraComboBoxSourceExtension}}"
									TextElement.FontWeight="{Binding ListItemFontWeight, RelativeSource={ext:AraComboBoxSourceExtension}}"
									VerticalAlignment="Center" />
							</Border>
							<ControlTemplate.Triggers>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter 
										TargetName="Border" 
										Property="Background" 
										Value="{Binding ListItemHoverBackground, RelativeSource={ext:AraComboBoxSourceExtension}}"/>
								</Trigger>
								<Trigger Property="IsSelected" Value="True">
									<Setter 
										TargetName="Border" 
										Property="Background" 
										Value="{Binding ListItemSelectedBackground, RelativeSource={ext:AraComboBoxSourceExtension}}"/>
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
		</Style.Resources>
		<!-- ComboBox -->
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="ComboBox">
					<Grid>
						<ToggleButton 
							x:Name="ToggleButton" 
							Template="{StaticResource AraComboBoxToggleButton}" 
							IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
							ClickMode="Press" />
						<TextBlock  
							x:Name="ContentSite"
							IsHitTestVisible="False"
							FontSize="{Binding SelectedTextFontSize, RelativeSource={RelativeSource TemplatedParent}}"
							FontFamily="{Binding SelectedTextFontFamily, RelativeSource={RelativeSource TemplatedParent}}"
							Foreground="{Binding SelectedTextForeground, RelativeSource={RelativeSource TemplatedParent}}"
							Margin="{Binding SelectedTextMargin, RelativeSource={RelativeSource TemplatedParent}}"
							VerticalAlignment="Center"
							Text="{TemplateBinding SelectionBoxItem}" />
						<TextBox x:Name="PART_EditableTextBox" Visibility="Hidden" IsReadOnly="{TemplateBinding IsReadOnly}"/>
						<Popup 
							x:Name="PART_Popup"
							IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
							PopupAnimation="Slide"
							VerticalOffset="4"
							AllowsTransparency="True">
							<Border
								BorderThickness="{Binding ItemsListBorderThickness, RelativeSource={RelativeSource TemplatedParent}}"
								BorderBrush="{Binding ItemsListBorderBrush, RelativeSource={RelativeSource TemplatedParent}}"
								CornerRadius="{Binding ItemsListCornerRadius, RelativeSource={RelativeSource TemplatedParent}}" 
								MaxHeight="{Binding ItemsListMaxHeight, RelativeSource={RelativeSource TemplatedParent}}"
								MaxWidth="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ActualWidth}"
								MinWidth="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ActualWidth}">
								<ScrollViewer VerticalScrollBarVisibility="Auto">
									<ItemsPresenter />
								</ScrollViewer>
							</Border>
						</Popup>
					</Grid>
					<ControlTemplate.Triggers>
						<Trigger Property="IsEditable" Value="true">
							<Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
							<Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>