<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:local="clr-namespace:ARA"
					xmlns:system="clr-namespace:System;assembly=mscorlib"
					xmlns:customControls="clr-namespace:ARA.Controls.CustomControls"
					xmlns:userControls="clr-namespace:ARA.Controls.UserControls">

	<!--ARA Window-->
	<Style TargetType="{x:Type local:AraWindow}">
		<Setter Property="ResizeMode" Value="NoResize"/>
		<Setter Property="Topmost" Value="True"/>
		<Setter Property="WindowStyle" Value="None"/>
		<Setter Property="AllowsTransparency" Value="True"/>
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type local:AraWindow}">
					<Border BorderBrush="{DynamicResource AraWindow__BorderBrush}" CornerRadius="4" BorderThickness="{TemplateBinding BorderThickness}">
						<Grid Background="Transparent">
							<Grid.Clip>
								<RectangleGeometry RadiusX="8" RadiusY="8" Rect="{Binding ClipRect, RelativeSource={RelativeSource TemplatedParent}}"/>
							</Grid.Clip>
							<Grid.RowDefinitions>
								<RowDefinition Height="32"/>
								<RowDefinition Height="*"/>
							</Grid.RowDefinitions>
							<userControls:TitleBarUserControl Grid.Row="0" Background="{TemplateBinding TitleBarBackground}" MinimizeButtonDisplay="{Binding MinimizeButtonDisplay, RelativeSource={RelativeSource TemplatedParent}}"/>
							<ContentPresenter Grid.Row="1"/>
						</Grid>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!--ARA Button-->
	<Style TargetType="{x:Type customControls:AraButton}">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderBrush" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Foreground" Value="White"/>

		<Setter Property="HoverBackground" Value="Transparent"/>
		<Setter Property="HoverBorderBrush" Value="Transparent"/>
		<Setter Property="HoverForeground" Value="White"/>

		<Setter Property="SelectedBackground" Value="Transparent"/>
		<Setter Property="SelectedBorderBrush" Value="Transparent"/>
		<Setter Property="SelectedForeground" Value="White"/>
		<Setter Property="CornerRadius" Value="0"/>
		<Setter Property="FocusVisualStyle" Value="{x:Null}"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type customControls:AraButton}">
					<Border x:Name="Border"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
                        Background="{TemplateBinding Background}"
						BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
						Padding="{TemplateBinding Padding}"
						Margin="{TemplateBinding Margin}"
						CornerRadius="{TemplateBinding CornerRadius}">
						<ItemsControl ItemsSource="{TemplateBinding Children}">
							<ItemsControl.ItemsPanel>
								<ItemsPanelTemplate>
									<StackPanel 
										Orientation="Horizontal" 
										HorizontalAlignment="Center"
										VerticalAlignment="Center"></StackPanel>
								</ItemsPanelTemplate>
							</ItemsControl.ItemsPanel>
						</ItemsControl>
					</Border>

					<ControlTemplate.Triggers>
						<Trigger Property="IsEnabled" Value="False">
							<Setter TargetName="Border" Property="Opacity" Value="0.5"/>
						</Trigger>
						<Trigger Property="customControls:AraButton.IsSelected" Value="True">
							<Setter TargetName="Border" Property="Opacity" Value="1"/>
							<Setter TargetName="Border"
                                Property="Background"
                                Value="{Binding SelectedBackground,
                                        RelativeSource={RelativeSource TemplatedParent}}"/>
							<Setter TargetName="Border"
                                Property="BorderBrush"
                                Value="{Binding SelectedBorderBrush,
                                        RelativeSource={RelativeSource TemplatedParent}}"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!--ARA ComboBox-->
	<Style TargetType="{x:Type customControls:AraComboBox}">
		<Style.Resources>
			<!-- ComboBoxToggleButton -->
			<ControlTemplate x:Key="AraComboBoxToggleButton" TargetType="{x:Type ToggleButton}">
				<Grid>
					<Border x:Name="ToggleBorder" 
						Background="{Binding ToggleButtonBackground, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}" 
						BorderThickness="{Binding ToggleButtonBorderThickness, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}" 
						CornerRadius="{Binding ToggleButtonCornerRadius, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}"  
						BorderBrush="{Binding ToggleButtonBorderBrush, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}" ></Border>
					<Path x:Name="Arrow"
						 HorizontalAlignment="Right" 
						 VerticalAlignment="Center"
						 Height="{Binding ToggleButtonArrowHeight, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}" 
						 Width="{Binding ToggleButtonArrowWidth, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}" 
						 Margin="{Binding ToggleButtonArrowMargin, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}" 
						 Stretch="Uniform"
						 RenderTransformOrigin="0.5,0.5"
						 Data="M0,0 L0,2 L4,6 L8,2 L8,0 L4,4 z"
						 Fill="{Binding ToggleButtonArrowBrush, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}" >
						<Path.RenderTransform>
							<RotateTransform x:Name="ArrowRotation" Angle="0"/>
						</Path.RenderTransform>
					</Path>
				</Grid>
				<ControlTemplate.Triggers>
					<Trigger Property="IsMouseOver" Value="True">
						<Setter 
							TargetName="ToggleBorder" 
							Property="BorderBrush" 
							Value="{Binding ToggleButtonHoverBorderBrush, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}"  />
						<Setter 
							TargetName="Arrow" 
							Property="Fill" 
							Value="{Binding ToggleButtonHoverArrowBrush, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}"  />
						<Setter 
							TargetName="ToggleBorder" 
							Property="Background" 
							Value="{Binding ToggleButtonHoverBackground, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}"  />
					</Trigger>
					<Trigger Property="IsChecked" Value="True">
						<Setter 
							TargetName="ToggleBorder"
							Property="BorderBrush"
							Value="{Binding ToggleButtonOpenBorderBrush, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}"  />
						<Setter 
							TargetName="Arrow" 
							Property="Fill" 
							Value="{Binding ToggleButtonOpenArrowBrush, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}"  />
						<Setter 
							TargetName="ToggleBorder" 
							Property="Background" 
							Value="{Binding ToggleButtonOpenBackground, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}"  />
						<Trigger.EnterActions>
							<BeginStoryboard>
								<Storyboard>
									<DoubleAnimation
										Storyboard.TargetName="ArrowRotation"
										Storyboard.TargetProperty="Angle"
										To="180"
										Duration="0:0:0.15" />
								</Storyboard>
							</BeginStoryboard>
						</Trigger.EnterActions>

						<Trigger.ExitActions>
							<BeginStoryboard>
								<Storyboard>
									<DoubleAnimation
										Storyboard.TargetName="ArrowRotation"
										Storyboard.TargetProperty="Angle"
										To="0"
										Duration="0:0:0.15" />
								</Storyboard>
							</BeginStoryboard>
						</Trigger.ExitActions>
					</Trigger>
				</ControlTemplate.Triggers>
			</ControlTemplate>
			<!-- ComboBoxItem -->
			<Style TargetType="{x:Type ComboBoxItem}">
				<Setter Property="OverridesDefaultStyle" Value="True"/>
				<Setter Property="FocusVisualStyle" Value="{x:Null}"/>
				<Setter Property="Cursor" Value="{x:Static local:App.AppCursor}" />
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type ComboBoxItem}">
							<Border x:Name="Border" 
								Height="{Binding ListItemHeight, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}"
								Background="{Binding ListItemBackground, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}">
								<ContentPresenter 
									Margin="{Binding ListItemMargin, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}" 
									TextElement.FontSize="{Binding ListItemFontSize, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}"
									TextElement.FontFamily="{Binding ListItemFontFamily, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}"
									TextElement.Foreground="{Binding ListItemForeground, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}"
									TextElement.FontWeight="{Binding ListItemFontWeight, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}"
									VerticalAlignment="Center" />
							</Border>
							<ControlTemplate.Triggers>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter 
										TargetName="Border" 
										Property="Background" 
										Value="{Binding ListItemHoverBackground, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}"/>
								</Trigger>
								<Trigger Property="IsSelected" Value="True">
									<Setter 
										TargetName="Border" 
										Property="Background" 
										Value="{Binding ListItemSelectedBackground, RelativeSource={RelativeSource AncestorType=customControls:AraComboBox}}"/>
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
			<!-- ComboBoxTextBox -->
			<ControlTemplate x:Key="AraComboBoxTextBox" TargetType="TextBox">
				<Border Background="Transparent" BorderThickness="0">
					<ScrollViewer x:Name="PART_ContentHost" 
                          Margin="0" 
                          Focusable="False"
                          HorizontalScrollBarVisibility="Hidden"
                          VerticalScrollBarVisibility="Hidden"/>
				</Border>
			</ControlTemplate>
		</Style.Resources>
		<!-- ComboBox -->
		<Setter Property="ToggleButtonBackground" Value="White"/>
		<Setter Property="ToggleButtonBorderBrush" Value="White"/>
		<Setter Property="ToggleButtonHoverBackground" Value="White"/>
		<Setter Property="ToggleButtonHoverBorderBrush" Value="White"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="ComboBox">
					<Grid x:Name="ComboboxInternalGrid">
						<ToggleButton 
							x:Name="PART_ToggleButton" 
							Template="{StaticResource AraComboBoxToggleButton}" 
							IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
							ClickMode="Press" />
						<TextBlock  
							x:Name="PART_ContentSite"
							IsHitTestVisible="False"
							FontSize="{Binding SelectedTextFontSize, RelativeSource={RelativeSource TemplatedParent}}"
							FontFamily="{Binding SelectedTextFontFamily, RelativeSource={RelativeSource TemplatedParent}}"
							FontWeight="{Binding SelectedTextFontWeight, RelativeSource={RelativeSource TemplatedParent}}"
							Foreground="{Binding SelectedTextForeground, RelativeSource={RelativeSource TemplatedParent}}"
							Margin="{Binding SelectedTextMargin, RelativeSource={RelativeSource TemplatedParent}}"
							VerticalAlignment="Center"
							Text="{TemplateBinding Text}" />
						<TextBlock  
							x:Name="PART_Placeholder"
							IsHitTestVisible="False"
							FontSize="{Binding SelectedTextFontSize, RelativeSource={RelativeSource TemplatedParent}}"
							FontFamily="{Binding SelectedTextFontFamily, RelativeSource={RelativeSource TemplatedParent}}"
							Foreground="{Binding PlaceholderForeground, RelativeSource={RelativeSource TemplatedParent}}"
							Margin="{Binding SelectedTextMargin, RelativeSource={RelativeSource TemplatedParent}}"
							VerticalAlignment="Center"
							Opacity="0.7"
							Text="{Binding PlaceholderText, RelativeSource={RelativeSource TemplatedParent}}"
							Visibility="Collapsed" />
						<TextBox 
							x:Name="PART_EditableTextBox"
							Template="{StaticResource AraComboBoxTextBox}"
							FontSize="{Binding SelectedTextFontSize, RelativeSource={RelativeSource TemplatedParent}}"
							FontFamily="{Binding SelectedTextFontFamily, RelativeSource={RelativeSource TemplatedParent}}"
							FontWeight="{Binding SelectedTextFontWeight, RelativeSource={RelativeSource TemplatedParent}}"
							Foreground="{Binding SelectedTextForeground, RelativeSource={RelativeSource TemplatedParent}}"
							Margin="{Binding TextBoxMargin, RelativeSource={RelativeSource TemplatedParent}}"
							VerticalAlignment="Center"
							Visibility="Hidden" 
							IsReadOnly="{TemplateBinding IsReadOnly}"/>
						<Popup 
							x:Name="PART_Popup"
							IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
							PopupAnimation="Slide"
							VerticalOffset="4"
							AllowsTransparency="True">
							<Border
								BorderThickness="{Binding ItemsListBorderThickness, RelativeSource={RelativeSource TemplatedParent}}"
								BorderBrush="{Binding ItemsListBorderBrush, RelativeSource={RelativeSource TemplatedParent}}"
								CornerRadius="{Binding ItemsListCornerRadius, RelativeSource={RelativeSource TemplatedParent}}" 
								MaxHeight="{Binding ItemsListMaxHeight, RelativeSource={RelativeSource TemplatedParent}}"
								MaxWidth="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ActualWidth}"
								MinWidth="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ActualWidth}">
								<ScrollViewer VerticalScrollBarVisibility="Auto">
									<ItemsPresenter />
								</ScrollViewer>
							</Border>
						</Popup>
					</Grid>
					<ControlTemplate.Triggers>
						<Trigger Property="IsEditable" Value="True">
							<Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
							<Setter TargetName="PART_ContentSite" Property="Visibility" Value="Collapsed"/>
						</Trigger>
						<Trigger Property="SelectedItem" Value="{x:Null}">
							<Setter TargetName="PART_ContentSite" Property="Visibility" Value="Collapsed"/>
						</Trigger>
						<MultiDataTrigger>
							<MultiDataTrigger.Conditions>
								<Condition Binding="{Binding ElementName=PART_EditableTextBox, Path=Text}" Value="" />
								<Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=SelectedItem}" Value="{x:Null}" />
							</MultiDataTrigger.Conditions>
							<Setter TargetName="PART_Placeholder" Property="Visibility" Value="Visible"/>
						</MultiDataTrigger>
						<MultiDataTrigger>
							<MultiDataTrigger.Conditions>
								<Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Items.Count}" Value="0" />
								<Condition Binding="{Binding ElementName=PART_EditableTextBox, Path=Text}" Value="" />
							</MultiDataTrigger.Conditions>
							<Setter Property="IsEnabled" Value="False"/>
							<Setter Property="Opacity" Value="0.5"/>
						</MultiDataTrigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!--Ara TextBox -->
	<Style TargetType="{x:Type customControls:AraTextBox}">
		<Setter Property="HoverBorderBrush" Value="Transparent"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type customControls:AraTextBox}">
					<Grid>
						<Border x:Name="TextBoxBorder"
							CornerRadius="{TemplateBinding CornerRadius}"
							BorderThickness="{TemplateBinding BorderThickness}"
							BorderBrush="{TemplateBinding BorderBrush}"
							Background="{TemplateBinding Background}">
							<ScrollViewer x:Name="PART_ContentHost" />
						</Border>
						<TextBlock x:Name="PlaceholderText"
							FontSize="{TemplateBinding FontSize}"
							FontFamily="{TemplateBinding FontFamily}"
							Text="{TemplateBinding PlaceholderText}"
							Foreground="{TemplateBinding PlaceholderForeground}"
							Padding="12 0"
							Opacity="0.7"
							VerticalAlignment="Center"
							IsHitTestVisible="False"
							Visibility="Collapsed"/>
					</Grid>
					<ControlTemplate.Triggers>
						<Trigger Property="Text" Value="">
							<Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>