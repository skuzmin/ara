<Application x:Class="ARA.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ARA"
             xmlns:tb="http://www.hardcodet.net/taskbar">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Themes/Primitives/Dimensions.xaml" />
				<ResourceDictionary Source="/Themes/Primitives/Colors.xaml" />
				<ResourceDictionary Source="/Themes/Primitives/Fonts.xaml" />
				<ResourceDictionary Source="/Themes/Primitives/Radiuses.xaml" />
				<ResourceDictionary Source="/Themes/Primitives/Spacings.xaml" />
				<ResourceDictionary Source="/Themes/Dark.xaml" />
				<ResourceDictionary Source="/Themes/Shared.xaml" />
				<ResourceDictionary Source="/Themes/Components/DialogStyles.xaml" />
				<ResourceDictionary Source="/Themes/Components/TitleBarStyles.xaml" />
				<ResourceDictionary Source="/Themes/Components/DataGridStyles.xaml" />
				<ResourceDictionary Source="/Themes/Components/MainWindowStyles.xaml" />
				<ResourceDictionary Source="/Themes/Components/ScrollBarStyles.xaml" />
			</ResourceDictionary.MergedDictionaries>
			<tb:TaskbarIcon x:Key="TrayIcon" 
				IconSource="/Assets/app.ico"
				ToolTipText="ARA" />
			<!-- ComboBoxItem binding fix: https://stackoverflow.com/questions/18096050/wpf-combobox-leaks-memory -->
			<Style TargetType="ComboBoxItem">
				<Setter Property="HorizontalContentAlignment" Value="Left" />
				<Setter Property="VerticalContentAlignment" Value="Center" />
			</Style>
			<!-- AraWindow -->
			<Style x:Key="AraWindow_Window" TargetType="local:AraWindow">
				<Setter Property="TitleBarBackground" Value="{StaticResource TitleBar__BackgroundColor}" />
				<Setter Property="Height" Value="{StaticResource MainWindowHeight}" />
				<Setter Property="Width" Value="{StaticResource MainWindowWidth}" />
			</Style>
		</ResourceDictionary>
	</Application.Resources>
</Application>
