<UserControl x:Class="ARA.Controls.TitleBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:ARA.Controls">
	<Grid Background="Gray" MouseLeftButtonDown="WindowDrag_MouseLeftButtonDown">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
			<Image Source="/Assets/app.ico" Height="16" Width="16" Margin="8,0"/>
			<TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}, FallbackValue='[ARA] Arc Raiders Assistant'}" 
                       VerticalAlignment="Center" Foreground="Black"/>
		</StackPanel>
		<StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
			<controls:AraButton HoverBackground="DarkGray" Content="🗕" Click="Minimize_Click"/>
			<controls:AraButton HoverBackground="DarkRed" Content="✕" Click="Close_Click"/>
		</StackPanel>
	</Grid>
</UserControl>
