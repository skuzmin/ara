<UserControl x:Class="ARA.Controls.LoadoutStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ARA.Controls"
             mc:Ignorable="d" >
	<Image>
		<Image.Style>
			<Style TargetType="Image">
				<Style.Triggers>
					<DataTrigger Binding="{Binding Status}" Value="0">
						<Setter Property="Source" Value="/Assets/Icons/Statuses/Unknown.png" />
					</DataTrigger>
					<DataTrigger Binding="{Binding Status}" Value="1">
						<Setter Property="Source" Value="/Assets/Icons/Statuses/Success.png" />
					</DataTrigger>
					<DataTrigger Binding="{Binding Status}" Value="2">
						<Setter Property="Source" Value="/Assets/Icons/Statuses/Fail.png" />
					</DataTrigger>
                </Style.Triggers>
			</Style>
        </Image.Style>
    </Image>
</UserControl>
