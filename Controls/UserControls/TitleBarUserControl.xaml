<UserControl x:Class="ARA.Controls.UserControls.TitleBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:ARA.Controls.CustomControls">
	<Grid Background="{StaticResource TitleBar__BackgroundColor}" MouseLeftButtonDown="WindowDrag_MouseLeftButtonDown">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
			<Image Source="/Assets/app.ico" Style="{StaticResource TitleBarLogo}"/>
			<TextBlock Style="{StaticResource TitleBarText}" Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}, FallbackValue='[ARA] Arc Raiders Assistant'}" />
		</StackPanel>
		<StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
			<controls:AraButton Style="{StaticResource TitleBarDefaultButton}" Content="🗕" Click="Minimize_Click" />
			<controls:AraButton Style="{StaticResource TitleBarCloseButton}" Content="✕" Click="Close_Click" />
		</StackPanel>
	</Grid>
</UserControl>
