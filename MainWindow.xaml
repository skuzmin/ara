<Window x:Class="ARA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARA"
		xmlns:controls="clr-namespace:ARA.Controls"
        mc:Ignorable="d"
        Title="[ARA] Arc Raiders Assistant" 
        Height="480" 
        Width="640"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Topmost="True"
        WindowStyle="None"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="24"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
        <!-- Title bar -->
		<Grid Grid.Row="0" Background="Gray">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
				<Image Source="/Assets/app.ico" Height="16" Width="16" Margin="8, 0"/>
				<TextBlock Text="[ARA] Arc Raiders Assistant" VerticalAlignment="Center" Foreground="Black" />
			</StackPanel>
			<StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
				<controls:AraButton HoverBackground="DarkGray" Content="🗕" Click="Window_MinAppClick"/>
				<controls:AraButton HoverBackground="DarkRed" Content="✕" Click="Window_CloseAppClick"/>
			</StackPanel>
		</Grid>
	</Grid>
</Window>
