<local:AraWindow
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ARA"
			 xmlns:views="clr-namespace:ARA.Views"
			 xmlns:shell="clr-namespace:ARA.ViewModels.Shell"
			 xmlns:viewmodels="clr-namespace:ARA.ViewModels.Pages"
			 xmlns:controls="clr-namespace:ARA.Controls"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DataContext="{d:DesignInstance Type=shell:MainViewModel}" mc:Ignorable="d" x:Class="ARA.MainWindow"
			 WindowStartupLocation="CenterScreen"
             Title="[ARA] Arc Raiders Assistant" d:DesignHeight="480" d:DesignWidth="640">
	<local:AraWindow.Resources>
		<DataTemplate DataType="{x:Type viewmodels:LoadoutViewModel}">
			<views:LoadoutView />
		</DataTemplate>
		<DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
			<views:SettingsView />
		</DataTemplate>
		<DataTemplate DataType="{x:Type viewmodels:AboutViewModel}">
			<views:AboutView />
		</DataTemplate>
	</local:AraWindow.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Border Style="{StaticResource MainWindowNavigation}">
			<Grid Grid.Row="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<controls:AraButton Grid.Column="0" Style="{StaticResource MainWindowNavigationButton}" Content="Loadout" Command="{Binding ShowLoadoutCommand}" IsSelected="{Binding IsLoadoutSelected}" />
				<controls:AraButton Grid.Column="1" Style="{StaticResource MainWindowNavigationButton}" Content="Stash" Command="{Binding ShowSettingsCommand}" IsSelected="{Binding IsSettingsSelected}"/>
				<controls:AraButton Grid.Column="3" Style="{StaticResource MainWindowNavigationButton}" Content="About" Command="{Binding ShowAboutCommand}" IsSelected="{Binding IsAboutSelected}"/>
			</Grid>
		</Border>
		<Border Grid.Row="1" Style="{StaticResource MainWindowContaier}">
			<ContentPresenter Content="{Binding CurrentPage}"/>
		</Border>
	</Grid>
</local:AraWindow>
