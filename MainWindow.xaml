<local:AraWindow
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ARA"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:views="clr-namespace:ARA.Views"
			 xmlns:shell="clr-namespace:ARA.ViewModels.Shell"
			 xmlns:viewmodels="clr-namespace:ARA.ViewModels.Pages"
			 xmlns:controls="clr-namespace:ARA.Controls"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DataContext="{d:DesignInstance Type=shell:MainViewModel}" mc:Ignorable="d" x:Class="ARA.MainWindow"
			 WindowStartupLocation="CenterScreen"
             Title="[ARA] Arc Raiders Assistant" d:DesignHeight="480" d:DesignWidth="640">
	<local:AraWindow.Resources>
		<DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
			<views:HomeView />
		</DataTemplate>
		<DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
			<views:SettingsView />
		</DataTemplate>
	</local:AraWindow.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Border Padding="16, 12" Background="#090A0F">
			<StackPanel Grid.Row="0" Orientation="Horizontal">
				<controls:AraButton FontWeight="Medium" SelectedForeground="White" CornerRadius="20" BorderThickness="2" SelectedBorderBrush="White" Padding="16,4" Height="36" Content="Loadout" FontSize="16" Command="{Binding ShowHomeCommand}" IsSelected="{Binding IsHomeSelected}" Margin="0,0,12,0"/>
				<controls:AraButton FontWeight="Medium" SelectedForeground="White" CornerRadius="20" BorderThickness="2" SelectedBorderBrush="White" Padding="16,4" Height="36" Content="Stash" FontSize="16" Command="{Binding ShowSettingsCommand}" IsSelected="{Binding IsSettingsSelected}" />
			</StackPanel>
		</Border>
		<Border Grid.Row="1">
			<Border.Background>
				<SolidColorBrush Color="#080c17" Opacity="0.9"/>
			</Border.Background>
			<ContentPresenter Content="{Binding CurrentPage}"/>
		</Border>
	</Grid>
</local:AraWindow>
