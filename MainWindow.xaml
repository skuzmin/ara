<local:AraWindow
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ARA"
			 xmlns:views="clr-namespace:ARA.Views"
			 xmlns:shell="clr-namespace:ARA.ViewModels.Shell"
			 xmlns:viewmodels="clr-namespace:ARA.ViewModels.Pages"
			 xmlns:controls="clr-namespace:ARA.Controls.CustomControls"
			 xmlns:enums="clr-namespace:ARA.Enums"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DataContext="{d:DesignInstance Type=shell:MainViewModel}" mc:Ignorable="d" x:Class="ARA.MainWindow"
			 WindowStartupLocation="CenterScreen"
             Title="[ARA] Arc Raiders Assistant" d:DesignHeight="480" d:DesignWidth="640">
	<local:AraWindow.Resources>
		<DataTemplate DataType="{x:Type viewmodels:LoadoutViewModel}">
			<views:LoadoutView />
		</DataTemplate>
		<DataTemplate DataType="{x:Type viewmodels:LoadoutConfigsViewModel}">
			<views:LoadoutConfigsView />
		</DataTemplate>
		<DataTemplate DataType="{x:Type viewmodels:LoadoutConfigDetailsViewModel}">
			<views:LoadoutConfigDetailsView />
		</DataTemplate>
		<DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
			<views:SettingsView />
		</DataTemplate>
		<DataTemplate DataType="{x:Type viewmodels:AboutViewModel}">
			<views:AboutView />
		</DataTemplate>
	</local:AraWindow.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Border Style="{StaticResource MainWindowNavigation}">
			<Grid x:Name="NavbarGrid" Grid.Row="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="12" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<Border x:Name="SelectionPill" Style="{StaticResource SelectedMenuPill}"/>
				<controls:AraButton Grid.Column="0" Style="{StaticResource MainWindowNavigationButton}" IsSelected="{Binding Navigation.IsLoadoutSelected}" Command="{Binding Navigation.NavigateToPageCommand}" CommandParameter="{x:Static enums:AraPage.Loadout}" Click="Navigation_Click">
					<controls:AraButton.Children>
						<TextBlock Text="Loadout" />
					</controls:AraButton.Children>
				</controls:AraButton>
				<controls:AraButton Grid.Column="2" Style="{StaticResource MainWindowNavigationButton}" IsSelected="{Binding Navigation.IsSettingsSelected}" Command="{Binding Navigation.NavigateToPageCommand}" CommandParameter="{x:Static enums:AraPage.Settings}" Click="Navigation_Click">
					<controls:AraButton.Children>
						<TextBlock Text="Settings" />
					</controls:AraButton.Children>
				</controls:AraButton>
				<controls:AraButton Grid.Column="4" Style="{StaticResource MainWindowNavigationButton}" IsSelected="{Binding Navigation.IsAboutSelected}" Command="{Binding Navigation.NavigateToPageCommand}" CommandParameter="{x:Static enums:AraPage.About}" Click="Navigation_Click">
					<controls:AraButton.Children>
						<TextBlock Text="About" />
					</controls:AraButton.Children>
				</controls:AraButton>
			</Grid>
		</Border>
		<Border Grid.Row="1" Style="{StaticResource MainWindowContaier}">
			<ContentPresenter Content="{Binding Navigation.CurrentPage}"/>
		</Border>
	</Grid>
</local:AraWindow>
